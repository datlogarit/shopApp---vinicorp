<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace define the path of interfaceMapper -->
<mapper namespace="com.example.shop_app.mapper.IOrderMapper">
    <select id="getProductOfOrderPage" resultType="com.example.shop_app.domains.Product">
        SELECT *
        FROM products
        WHERE id = #{productId}
    </select>
</mapper>