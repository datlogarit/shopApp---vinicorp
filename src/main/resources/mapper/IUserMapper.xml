<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace define the path of interfaceMapper -->
<mapper namespace="com.example.shop_app.mapper.IUserMapper">
    <insert id="crateNewUser" useGeneratedKeys="true">
        insert into users(full_name, phone_number, password, address, role)
        values (#{user.fullName}, #{user.phoneNumber}, #{user.password},  #{user.address},  #{user.role})
    </insert>
    
    <select id="getUserByPhoneNumber" resultType="Users">
        select * from users where phone_number = #{phoneNumber}
    </select>
</mapper>