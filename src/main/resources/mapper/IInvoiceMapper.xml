<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace define the path of interfaceMapper -->
<mapper namespace="com.example.shop_app.mapper.IInvoiceMapper">
    <!-- create a new invoice -->
    <insert id="createInvoice">
        insert into invoices(customer_id, pay_method, order_status)
        values (#{invoice.customerId}, #{invoice.payMethod}, #{invoice.orderStatus})
    </insert>
</mapper>